<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addModalLabel">Add New Product</h4>
            </div>
            <div class="modal-body">
                <form action="/admin/adNew" method="post">
                    <div class="form-group">
                        <label class="control-label">Title:</label>
                        <input required type="text" class="form-control" name="title">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Price:</label>
                        <input required type="number" class="form-control" name="price">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Discount Percentage:</label>
                        <input required type="number" step=".01" class="form-control" name="discountPercentage">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Reting:</label>
                        <input required type="number" class="form-control" name="rating">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Category:</label>
                        <select class="form-control" name="category">

                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image:</label>
                        <input required type="file" accept="image/png, image/gif, image/jpeg" class="form-control" name="thumbnail">
                    </div>
                    <div class="modal-footer" style="padding: 0; border: none;">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>